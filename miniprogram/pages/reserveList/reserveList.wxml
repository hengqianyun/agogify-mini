<view class="reserve-list-page border-top">
  <view class="switch-bar">
    <van-tabs active="{{ active }}" bind:change="onChange">
      <block wx:for="{{tabList}}" wx:key="status">
        <van-tab title="{{item.label}}">
          <view class="list-container">
            <block wx:for="{{reserveLists[index]}}" wx:for-item="reserve" wx:for-index="index2" wx:key="id">
              <view class="reserve-item">
                <view class="item-top">
                  <view class="i-t-left">
                    <view class="reserve-duration">{{reserve.duration}}</view>
                    <view class="reserve-status">{{reserve.tag}}</view>
                  </view>
                  <view class="i-t-right">{{reserve.date}}</view>
                </view>
                <view class="item-content">
                  <view class="content-left">
                    <image class="store-avatar" src="{{reserve.sales.store.logo.path}}" lazy-load="false" binderror="" bindload=""></image>
                  </view>
                  <view class="content-right">
                    <view class="store-name">{{reserve.sales.store.name}}</view>
                    <view class="saler-name text-ellipsis">预约店员：{{reserve.sales.username}}</view>
                    <view class="store-address">
                      <iconfont name="dingwei_g" size="{{24}}"></iconfont>
                      <view class="store-address-text text-ellipsis">
                        {{reserve.address}}
                      </view>
                    </view>
                  </view>
                  <view class="content-controller">
                    <iconfont wx:if="{{reserve.tag === '待进行'}}" name="store_hujiao" data-index="{{index}}" size="{{40}}" bind:tap="handleCall"></iconfont>
                    <view wx:else></view>
                    <iconfont name="collection_g" size="{{40}}"></iconfont>
                    <iconfont name="share" size="{{40}}"></iconfont>
                  </view>
                </view>
              </view>
            </block>
          </view>
        </van-tab>
      </block>
    </van-tabs>
  </view>
</view>